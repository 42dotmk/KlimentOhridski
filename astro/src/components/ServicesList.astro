---
import { getAbsoluteUrl } from "../lib/strapi";
import type { Service } from "../types";
import ServiceCard from "./ServiceCard.astro";
import Image from "astro/components/Image.astro";
import Cloud from "./icons/cloud.svg";
import Rainbow from "./icons/rainbow.svg";

const { services } = Astro.props;
---

<div class="flex flex-col justify-center items-center px-4 gap-8">
  <div
    class="flex flex-row justify-center items-center w-full md:justify-between"
  >
    <Image
      src={Cloud}
      alt="cloud"
      class="absolute md:relative top-[25%] transform-[scale(0.65)] sm:transform-none sm:left-0 left-[-30px]"
      loading="eager"
    />
    <div class="flex flex-col justify-center items-center">
      <h1 class="text-3xl sm:text-5xl font-bold text-center pb-6 lg:pb-8">
        Услуги
      </h1>
      <p class="text-lg font-medium mb-6">
        Како ресурсен центар, ги нудиме следниве услуги:
      </p>
    </div>
    <Image
      src={Rainbow}
      alt="rainbow"
      class="relative hidden md:block top-[-5%] left-[0%]"
      loading="eager"
    />
  </div>
  <div class="flex flex-wrap gap-8 max-w-[1160px] justify-center items-center">
    {
      services.map((service: Service) => (
        <ServiceCard
          imageUrl={getAbsoluteUrl(service.image?.url)}
          name={service.name}
        />
      ))
    }
  </div>
</div>
